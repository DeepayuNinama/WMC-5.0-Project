        }

        .form-group{
            padding-top: 15px;
        }


        .cart-stuff {
            display: flex;
        }
        .detail-box {
            color: #ffffff;
        }
        .classDesc {
            
        }
        .classPrice {
            margin-top: -20px;
        }
        .classProd {
            margin-top: 20px;
        }
        .jsrespo {
            display: flex;
            justify-content: space-between;
        }
        .delete-form {
            justify-content: flex-end;
        }
        .qtyvalue {
            width: 40px;
            height: 20px;
            justify-content: center;
            border: none;
        }

        .cart-img{
            width: 100px;
            height: 100px;
            object-fit: contain;
            padding: 10px;
        }

        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes slideOut {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
